акцояихлос local_global
дедолема
   x,ret:INTEGER;  /* Katholiki metavliti:   
                  Tin vlepoun oloi */

сумаятгсг f1(): INTEGER
диепажг
   еисодос
   енодос
      f1: INTEGER;
дедолема
   a,x:INTEGER; /* Topikes metavlites tis 
                   f1*/
аявг
   a:=2;
   x:=0;
   /* Exoyme diplo onoma stin x. 
      Epikratei to topiko onoma */      
   тупысе(EOLN,"f1: a=",a,",x=",x);
   f1:=0;
текос-сумаятгсгс

сумаятгсг f2(): INTEGER
диепажг
   еисодос
