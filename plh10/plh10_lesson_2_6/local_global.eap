      f2: INTEGER;
дедолема
   a:INTEGER; /* Topikes metavlites 
                   tis f2*/
аявг
   a:=8;
   x:=7; /*Anaferetai sti katholiki x */ 
   тупысе(EOLN,"f2: a=",a,",x=",x);
   f2:=0;
текос-сумаятгсгс


аявг
   x:=5;
   тупысе(EOLN,"акц: x=",x);
